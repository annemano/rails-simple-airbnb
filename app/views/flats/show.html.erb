<div class="position-relative">

  <div class="banner">
  </div>

  <div class="container d-flex justify-content-between position-absolute top-100 start-50 translate-middle">

    <div class="flat-text" style="width: 60%">

      <div class="flat-name-address bg-white shadow-sm p-3 mb-5 bg-body rounded">
        <h1><%= @flat.name %></h1>
        <h3><%= @flat.address %></h3>
      </div>

      <div class="flat-description bg-white shadow-sm p-3 mb-5 bg-body rounded">
        <h2>A bit more about this flat...</h2>
        <p><%= @flat.description %></p>
      </div>

    </div>

    <div class="flat-book-details" style="width: 30%">

      <div class="flat-book bg-white shadow-sm p-3 mb-5 bg-body rounded">
        <h4>Book this place!</h4>
        <form>
          <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1">From:</span>
            <input type="date" class="form-control" placeholder="12/10/2021" aria-label="From Date" aria-describedby="basic-addon1">
            <span class="input-group-text" id="basic-addon2">To:</span>
            <input type="date" class="form-control" placeholder="14/10/2021" aria-label="To Date" aria-describedby="basic-addon2">
            <button type="submit" class="btn btn-success">Book</button>
          </div>
        </form>

      </div>

      <div class="flat-details bg-white shadow-sm p-3 mb-5 bg-body rounded">
        <h2>Details</h2>
        <div class="details-items d-flex">
          <p><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></p>
          <p class="ms-3"><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></p>
        </div>
      </div>

      <div class="flat-share bg-white shadow-sm p-3 mb-5 bg-body rounded d-flex justify-content-between align-items-center">
        <p class="mb-0">Share</p>
        <div class="links">
          <ul class="list-inline mb-0">
            <li class="list-inline-item"><i class="fab fa-facebook-square fs-3"></i></li>
            <li class="list-inline-item"><i class="fab fa-twitter-square fs-3"></i></li>
            <li class="list-inline-item"><i class="fab fa-pinterest-square fs-3"></i></li>
            <li class="list-inline-item"><i class="fas fa-envelope-square fs-3"></i></li>
          </ul>
        </div>

      </div>

    </div>

  </div>
</div>



