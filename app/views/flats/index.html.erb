<div class="container">
  <h1 class="my-5">All our flats (<%= @flats.count %>)</h1>
  <div class="d-flex justify-content-evenly flex-wrap">
    <% @flats.each do |flat| %>
      <div class="card shadow-sm p-3 mb-5 bg-body rounded" style="width: 16rem;">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
          <div class="card-text d-flex">
            <p><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>
            <p class="ms-3"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
          </div>
          <div class="d-flex">
            <%= link_to 'Info', flat_path(flat), class: "px-1" %>
            <%= link_to 'Edit', edit_flat_path(flat), class: "px-1" %>
            <%= link_to 'Remove', flats_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "px-1" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
