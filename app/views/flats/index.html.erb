<h1>All our flats (<%= @flats.count %>)</h1>
<div class="d-flex justify-content-evenly">
  <% @flats.each do |flat| %>
    <div class="card shadow-sm p-3 mb-5 bg-body rounded" style="width: 16rem;">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        <div class="card-text d-flex">
          <p><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></p>
          <p><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
        </div>
        <div class="d-flex">
          <%= link_to 'More info', flat_path(flat) %>
          <%= link_to 'Edit', edit_flat_path(flat) %>
          <%= link_to 'Remove', flats_path, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  <% end %>
</div>

