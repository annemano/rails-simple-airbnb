        <a class="navbar-brand" href="/flats">Simple Airbnb</a>
        <a class="nav-link btn btn-outline-primary" href="/flats/new">Add Flat</a>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
